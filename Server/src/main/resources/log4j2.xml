<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="FileLogger" fileName="/Users/veronicavacaras/Desktop/facultate/an2/mpp/subiect1din2023/SablonExamen/Client/logs/JocDeGhicire.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Logger special pentru pachetul mpp.persistance -->
        <Logger name="mpp.persistance" level="trace" additivity="false">
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Logger implicit pentru tot restul -->
        <Root level="info">
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
